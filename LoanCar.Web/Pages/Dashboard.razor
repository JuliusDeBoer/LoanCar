@page "/dashboard"

<PageTitle>Dashboard</PageTitle>

<AuthorizeView>
	<NotAuthorized>
		@{ NavigationManager.NavigateTo("/login"); }
	</NotAuthorized>
</AuthorizeView>

<div class="container mx-auto">
	<h1 class="text-2xl font-bold">Auto's</h1>
	@foreach (var car in Cars)
	{
        <div class="bg-slate-200 p-8 m-8 rounded-xl cursor-pointer flex items-center" @onclick="@(() => NavigationManager.NavigateTo("/cars/" + car.Id))">
            <i class="ph ph-car text-2xl" />
            <div class="ml-4">
                <h2 class="text-xl font-medium">@car.Name</h2>
                <p>Kilometer: @(car.Milage)Km</p>
            </div>
        </div>
    }
</div>
